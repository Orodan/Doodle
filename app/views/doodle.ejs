<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <title>Doodle</title>

    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->

    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">  <!-- load fontawesome -->

    <link rel="stylesheet" href="/css/style.css">  

    <style>
        body { padding-top: 80px; }
    </style>
</head>
<body>
    <div class="container">

        <% if (message.length > 0) { %>
            <div class="col-sm-6 col-sm-offset-3 alert alert-info" role="alert">
                <%= __('' + message + ''); %>
            </div>
        <% } %>

        <!-- DOODLE DATA -->
        <div class="col-sm-8 ">
            <div class="jumbotron text-center">
                <h1><%= __('Doodle') %></h1>
                <br/>

                <% if (doodle) { %>
                    <table class="table">
                        <thead>
                            <tr>
                                <th></th>
                                <% for (var key in doodle.schedules) { %>
                                    <% if ( doodle.schedules[key].begin_date.toDateString() === doodle.schedules[key].end_date.toDateString() ) { %>
                                            <th scope="col"><%= doodle.schedules[key].begin_date.toDateString() %> <br/> <%= doodle.schedules[key].begin_date.toTimeString() %> <br/> <%= doodle.schedules[key].end_date.toTimeString() %></th>
                                        <% } else { %>
                                            <th scope="col"><%= doodle.schedules[key].begin_date %> <br/> <%= doodle.schedules[key].end_date %></th>
                                        <% } %>
                                <% } %>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (var key in doodle.users) { %>
                                <tr>
                                    <td scope="row"><%= doodle.users[key].first_name %> <%= doodle.users[key].last_name %></td>
                                    <% for ( var key2 in doodle.users[key].votes ) { %>
                                        <td><%= doodle.users[key].votes[key2].vote %></td>
                                    <% } %>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                <% } %>
            </div>
        </div>

        <!-- NAVIGATION -->
        <div class="col-sm-4 ">
             <div class="jumbotron text-center">
                <% if (user_statut != 'unregistred') { %>
                    <% if (user_statut == 'admin' ) { %>
                        <a href='<%= doodle.id %>/add-user'><%= __('Add user') %></a><br>
                        <a href='<%= doodle.id %>/add-schedule'><%= __('Add schedule') %></a><br>
                    <% } %>
                    <a href='<%= doodle.id %>/add-vote'><%= __('Add vote') %></a>
                <% } else { %>
                    <a href='<%= doodle.id %>/add-public-user'><%= __('Add temporary user') %></a>
                <% } %>
             </div>
        </div>

        <% if (user_statut == 'admin' ) { %>
            <div class="col-sm-4 ">
                 <div class="jumbotron text-center">
                    <a href='<%= doodle.id %>/remove-user'><%= __('Remove user') %></a><br>
                    <a href='<%= doodle.id %>/delete-schedule'><%= __('Remove schedule') %></a><br>
                 </div>
            </div>
        <% } %>

        <!-- PARTICIPATION REQUESTS -->
        <% if ( typeof doodle.participation_requests != 'undefined' && doodle.participation_requests.length > 0 ) { %>
            <div class="col-sm-8">
                <div class="alert alert-info">
                    <ul>
                    <% for ( var key in doodle.participation_requests ) { %>
                        <li>
                            <%= doodle.participation_requests[key].first_name + ' ' + doodle.participation_requests[key].last_name + ' has been invited to participate' %>
                        </li>
                    <% } %>
                    </ul>
                </div>
            </div>
        <% } %>

    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script type="text/javascript" src="/js/script.js"></script>
</body>
</html>